
@{
}
@* When it is hovered, the button highlights the selected team *@
@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-tName=""  class="btn @(ViewBag.SelectedTeam == "" ? "btn-primary" : "btn-outline-primary")">Home</a>
    <br/>
    @foreach (string t in Model)
     {
       <a asp-controller="Home" asp-action="Index" asp-route-tName="@t" 
          class="btn @(ViewBag.SelctedTeam == t ? "btn-primary" : "btn-outline-primary")">@t</a>
       <br/>
     }
</div>
